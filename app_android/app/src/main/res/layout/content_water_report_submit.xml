<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs2340gt.nick.app_android.controller.WaterReportSubmitActivity"
    android:gravity="center_vertical|center_horizontal">

    <Button
        android:id="@+id/buttonCancelReport"
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/labelTextId"
        android:text="Report ID#:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/displayTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/labelTextId"/>

    <TextView
        android:id="@+id/labelTextUser"
        android:text="User:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelTextId"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/displayTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelTextUser"
        android:layout_toEndOf="@+id/labelTextUser"/>

    <TextView
        android:id="@+id/labelTextDateTime"
        android:text="Date/Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelTextUser"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/displayTextDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelTextDateTime"
        android:layout_toEndOf="@+id/displayTextId"/>

    <RadioButton
        android:id="@+id/rButtonTreatableClear"
        android:text="Treatable - Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rButtonTreatableMuddy"
        android:layout_alignStart="@+id/rButtonTreatableMuddy"/>

    <RadioButton
        android:id="@+id/rButtonPotable"
        android:text="Potable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rButtonTreatableClear"
        android:layout_alignStart="@+id/rButtonTreatableClear"/>

    <TextView
        android:id="@+id/labelRGroupQuality"
        android:text="Water Quality:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rButtonTreatableMuddy"
        android:layout_centerHorizontal="true"/>

    <RadioButton
        android:id="@+id/rButtonWaste"
        android:text="Waste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:layout_above="@+id/buttonCancelReport"
        android:layout_alignStart="@+id/rButtonTreatableMuddy"/>

    <Spinner
        android:id="@+id/SpinnerSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/labelSpinnerSource"
        android:text="Water Source:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SpinnerSource"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/labelTextLocation"
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayTextDateTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"/>

    <RadioButton
        android:id="@+id/rButtonTreatableMuddy"
        android:text="Treatable - Muddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_alignTop="@+id/rButtonWaste"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonAddReport"
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/editLocation"
        android:hint="Please Enter Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_below="@+id/labelTextLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center_horizontal"/>

</RelativeLayout>
