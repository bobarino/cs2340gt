<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="20"
        android:id="@+id/email_input"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:id="@+id/add_button"
        android:onClick="onAddPressed"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:id="@+id/cancel_button"
        android:onClick="onCancelPressed"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cred_label"
        android:ems="20"
        android:layout_above="@+id/cred_group"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cred_group"
        android:layout_marginBottom="63dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/cancel_button"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cred_user"
            android:layout_weight="1" />

        <RadioButton
            android:text="Worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cred_worker"
            android:layout_weight="1" />

        <RadioButton
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cred_manager"
            android:layout_weight="1" />

        <RadioButton
            android:text="Admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cred_admin"
            android:layout_weight="1" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="5"
        android:id="@+id/user_input"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/email_input"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pass"
        android:ems="20"
        android:id="@+id/pass_input"
        android:layout_below="@+id/user_input"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>