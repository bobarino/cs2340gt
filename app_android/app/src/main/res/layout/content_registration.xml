<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAddAcc"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonCancelRgstr"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_above="@+id/rGroupCred"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <RadioGroup
        android:id="@+id/rGroupCred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/buttonCancelRgstr"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rButtonUser"
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rButtonWorker"
            android:text="Worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rButtonManager"
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rButtonAdmin"
            android:text="Admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </RadioGroup>

    <EditText
        android:id="@+id/editEmail"
        android:hint="Enter email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:ems="5"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editPassword"
        android:hint="Enter password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:inputType="textPersonName"
        android:ems="20"
        android:layout_below="@+id/editEmail"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>